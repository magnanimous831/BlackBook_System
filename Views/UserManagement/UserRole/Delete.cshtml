@model BlackBook_System.Models.User_Role

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-trash"></i> Delete User Role</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this user role?
                    </div>

                    <dl>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.RoleName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RoleName)
                        </dd>

                        <dt class="col-sm-4">
                            Assigned User
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.User?.Email ?? "Not Assigned")
                        </dd>
                    </dl>

                    <form asp-action="DeleteUserRole">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                            <a asp-action="UserRoles" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 