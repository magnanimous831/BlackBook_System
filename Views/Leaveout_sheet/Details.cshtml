            @Html.DisplayNameFor(model => model.STUDENTNAME)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.STUDENTNAME)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ADMNO)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ADMNO)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CLASS)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CLASS)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LEAVINGDATE)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LEAVINGDATE)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.REASONFORLEAVING)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.REASONFORLEAVING)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RETURNDATE)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RETURNDATE)
        </dd>
        <dt class = "col-sm-2">
