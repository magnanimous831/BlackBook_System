@using System.IO
@model IEnumerable<BlackBook_System.Models.StudentsEnrollment>

@{
    ViewData["Title"] = "Students Enrollment";
}

<h1 class="fas fa-user-graduate">Students Enrollment</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle"></i> Create New
    </a>
</p>

<div class="table-responsive">
    <table class="table text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ADMNO)</th>
                <th>@Html.DisplayNameFor(model => model.STUDENTNAME)</th>
                <th>@Html.DisplayNameFor(model => model.GENDER)</th>
                <th>@Html.DisplayNameFor(model => model.DOB)</th>
                <th>@Html.DisplayNameFor(model => model.CLASSADMITTED)</th>
                <th>@Html.DisplayNameFor(model => model.ADMISSIONDATE)</th>
                <th>@Html.DisplayNameFor(model => model.GUARDIAN_NAME)</th>
                <th>@Html.DisplayNameFor(model => model.CONTACTNUMBER)</th>
                <th>@Html.DisplayNameFor(model => model.County)</th>
                <th>@Html.DisplayNameFor(model => model.SubCounty)</th>
                <th>@Html.DisplayNameFor(model => model.Ward)</th>
                <th>Certificate</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ADMNO)</td>
                    <td>@Html.DisplayFor(modelItem => item.STUDENTNAME)</td>
                    <td>@Html.DisplayFor(modelItem => item.GENDER)</td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.CLASSADMITTED)</td>
                    <td>@Html.DisplayFor(modelItem => item.ADMISSIONDATE)</td>
                    <td>@Html.DisplayFor(modelItem => item.GUARDIAN_NAME)</td>
                    <td>@Html.DisplayFor(modelItem => item.CONTACTNUMBER)</td>
                    <td>@Html.DisplayFor(modelItem => item.County)</td>
                    <td>@Html.DisplayFor(modelItem => item.SubCounty)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ward)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.CertificateName))
                        {
                            <a href="~/certificates/@item.CertificateName" target="_blank" class="text-primary">
                                <i class="fas fa-file-alt me-1"></i>
                                View Certificate
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">
                                <i class="fas fa-times-circle me-1"></i>
                                No certificate
                            </span>
                        }
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alert after 5 seconds
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}
