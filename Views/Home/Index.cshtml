@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center py-5" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80'); background-size: cover; background-position: center; color: white; padding: 100px 0;">
    <h1 class="display-4">Welcome to BLACKBOOK App</h1>
    <p class="lead">Your management solution for students discipline and beyond.</p>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">Get Started</a>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-3x mb-3"></i>
                    <h5 class="card-title">Student Management</h5>
                    <p class="card-text">Efficiently manage student records and discipline.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-clipboard-list fa-3x mb-3"></i>
                    <h5 class="card-title">Leaveout Sheets</h5>
                    <p class="card-text">Track student leave requests and approvals.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x mb-3"></i>
                    <h5 class="card-title">Dashboard</h5>
                    <p class="card-text">View insights and reports at a glance.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}