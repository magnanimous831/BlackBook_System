@model BlackBook_System.Models.ReportStats

@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="fas fa-chart-bar"></i> Reports</h1>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-graduate"></i> Student Reports</h5>
                    <p class="card-text">Total Students: @Model.TotalStudents</p>
                    <div class="mt-3">
                        <a href="@Url.Action("StudentReport")" class="btn btn-light">
                            <i class="fas fa-file-alt"></i> View Student Report
                        </a>
                        <a href="@Url.Action("ClassWiseReport")" class="btn btn-light">
                            <i class="fas fa-chart-pie"></i> Class-wise Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-clipboard-list"></i> Leaveout Reports</h5>
                    <p class="card-text">Total Leaveouts: @Model.TotalLeaveouts</p>
                    <div class="mt-3">
                        <a href="@Url.Action("LeaveoutReport")" class="btn btn-light">
                            <i class="fas fa-file-alt"></i> View Leaveout Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-check"></i> Occurrence Reports</h5>
                    <p class="card-text">Total Occurrences: @Model.TotalOccurrences</p>
                    <div class="mt-3">
                        <a href="@Url.Action("OccurrenceReport")" class="btn btn-light">
                            <i class="fas fa-file-alt"></i> View Occurrence Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-gavel"></i> Discipline Reports</h5>
                    <p class="card-text">Total Discipline Cases: @Model.TotalDisciplineCases</p>
                    <div class="mt-3">
                        <a href="@Url.Action("DisciplineReport")" class="btn btn-light">
                            <i class="fas fa-file-alt"></i> View Discipline Report
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chalkboard-teacher"></i> Teacher Reports</h5>
                    <p class="card-text">Total Teachers: @Model.TotalTeachers</p>
                    <div class="mt-3">
                        <a href="@Url.Action("TeacherReport")" class="btn btn-light">
                            <i class="fas fa-file-alt"></i> View Teacher Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 