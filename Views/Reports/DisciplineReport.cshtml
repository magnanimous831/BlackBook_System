@model IEnumerable<BlackBook_System.Models.Discipline>

@{
    ViewData["Title"] = "Discipline Report";
}

<div class="container-fluid">
    <h1 class="mb-4"><i class="fas fa-gavel"></i> Discipline Report</h1>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Admission No</th>
                            <th>Student Name</th>
                            <th>Class</th>
                            <th>Case</th>
                            <th>Audited By</th>
                            <th>Audit Date</th>
                            <th>Action Taken</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var discipline in Model)
                        {
                            <tr>
                                <td>@discipline.DATE.ToShortDateString()</td>
                                <td>@discipline.ADMNO</td>
                                <td>@discipline.STUDENTNAME</td>
                                <td>@discipline.CLASS</td>
                                <td>@discipline.INDISCIPLINECASE</td>
                                <td>@discipline.AUDITED_BY</td>
                                <td>@discipline.AUDITED_DATETIME.ToShortDateString()</td>
                                <td>@discipline.ACTION_TAKEN</td>
                                <td>@discipline.CASE_STATUS</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Reports
        </a>
    </div>
</div> 